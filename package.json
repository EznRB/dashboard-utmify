{
  "name": "utmify-clone",
  "version": "1.0.0",
  "description": "Utmify Clone - Marketing Analytics SaaS Platform",
  "private": true,
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "db:generate": "pnpm --filter @utmify/database db:generate",
    "db:push": "pnpm --filter @utmify/database db:push",
    "db:migrate": "pnpm --filter @utmify/database db:migrate",
    "db:studio": "pnpm --filter @utmify/database db:studio",
    "db:seed": "pnpm --filter @utmify/database db:seed",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:clean": "docker-compose down -v --remove-orphans",
    "setup": "pnpm install && pnpm db:generate && pnpm docker:up",
    "start:web": "pnpm --filter @utmify/web dev",
    "start:api": "pnpm --filter @utmify/api dev",
    "start:all": "concurrently \"pnpm start:api\" \"pnpm start:web\""
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^3.2.4",
    "turbo": "^1.12.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "dotenv": "^16.4.0"
  },
  "keywords": [
    "saas",
    "marketing",
    "analytics",
    "utm",
    "campaigns",
    "monorepo",
    "nextjs",
    "nodejs",
    "typescript",
    "prisma",
    "postgresql",
    "redis"
  ],
  "author": "Utmify Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/utmify/utmify-clone.git"
  },
  "bugs": {
    "url": "https://github.com/utmify/utmify-clone/issues"
  },
  "homepage": "https://github.com/utmify/utmify-clone#readme"
}